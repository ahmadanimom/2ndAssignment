<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.fragmentlab.Events.EventMain">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="My Events"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.hp.fragmentlab.Events.EventFragment"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        tools:layout="@layout/fragment_event"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/txt_show_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="36dp"
        android:text="Show Event"
        android:textSize="20sp"
        android:layout_below="@+id/fragment3"
        android:layout_toStartOf="@+id/textView" />

    <ImageView
        android:id="@+id/image_picaso"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txt_show_event"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

</RelativeLayout>
